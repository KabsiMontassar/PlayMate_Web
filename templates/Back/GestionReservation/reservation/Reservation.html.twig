    <section class="section" id="section">
        <table class="table datatable">
            <thead>
                <tr>
                    <th>Idreservation</th>
                    <th>Isconfirm</th>
                    <th>Datereservation</th>
                    <th>Heurereservation</th>
                    <th>Type</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.idreservation }}</td>
                    <td>{{ reservation.isconfirm ? 'Yes' : 'No' }}</td>
                    <td>{{ reservation.datereservation ? reservation.datereservation.format('Y-m-d') : '' }}</td>
                    <td>{{ reservation.heurereservation }}</td>
                    <td>{{ reservation.type }}</td>
                    <td>
                        <a
                            href="{{ path('app_reservation_show', {'idreservation': reservation.idreservation}) }}">show</a>
                        <a
                            href="{{ path('app_reservation_edit', {'idreservation': reservation.idreservation}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="8">no records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_reservation_new') }}">Create new</a>
    </section>


</main>
<script>
    // Définissez la fonction recherche à l'extérieur du gestionnaire d'événement
    function recherche() {
        var type = document.getElementById('monChoix').value;
        var section = document.getElementById('section');
        var sectiontrie = document.getElementById('sectiontrie');

        if (section && sectiontrie) {
            section.style.display = 'none';
            alert("ici");
            fetch('/reservation/trie/' + type)
                .then(response => response.json())
                .then(reservations => {
                    sectiontrie.style.display = 'block';
                    var tbody = document.getElementById('tbod2');
                    tbody.innerHTML = '';
                    if (reservations.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="6">Aucune réservation trouvée.</td></tr>';
                    } else {
                        reservations.forEach(reservation => {
                            var row = `<tr>
                                <td>${reservation.idreservation}</td>
                                <td>${reservation.isconfirm ? 'Oui' : 'Non'}</td>
                                <td>${reservation.datereservation}</td>
                                <td>${reservation.heurereservation}</td>
                                <td>${reservation.type}</td>
                                <td>
                                    <a href="/reservation/show/${reservation.idreservation}">show</a>
                                    <a href="/reservation/edit/${reservation.idreservation}">edit</a>
                                </td>
                            </tr>`;
                            tbody.innerHTML += row;
                        });
                    }
                })
                .catch(error => {
                    console.error('Erreur lors de la récupération des réservations:', error);
                    section.style.display = 'block';
                    var tbody = document.getElementById('tbod2');
                    tbody.innerHTML = '<tr><td colspan="6">Erreur lors du chargement des données.</td></tr>';
                });
        }
    }

    // Attendez le chargement du DOM pour attacher des événements
    document.addEventListener('DOMContentLoaded', function () {

        // Placez d'autres scripts ici si nécessaire
    });
</script>

