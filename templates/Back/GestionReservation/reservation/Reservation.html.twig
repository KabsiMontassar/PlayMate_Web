<script>
    function affichertout() {
        var section = document.getElementById('sectionoriginale');
        if (section.style.display === 'none') {
            section.style.display = 'block';
        }
    }
    function recherche() {
        var section = document.getElementById('sectionoriginale');

        section.style.display = 'none';

        var type = document.getElementById('monChoix').value;

        // Appel de fetchReservationsByType pour récupérer les réservations
        fetchReservationsByType(type)
            .then(reservations => {
                // Affichage des réservations retournées
                displayReservations(reservations);
            })
            .catch(error => {
                console.error('Erreur lors de la récupération des réservations:', error);
                // Affichage d'un message d'erreur dans le cas où il y a une erreur
                var aziz = document.getElementById('aziz');
                aziz.innerHTML = '<tr><td colspan="6">Erreur lors du chargement des données.</td></tr>';
            });
    }




    function fetchReservationsByType(type) {
        return fetch('/reservation/trie/' + type)
            .then(response => {
                if (!response.ok) {
                    throw new Error('Erreur lors de la récupération des réservations');
                }
                return response.json();
            })
            .catch(error => {
                console.error('Erreur lors de la récupération des réservations:', error);
                return [];
            });
    }
    function displayReservations(reservations) {
        var aziz = document.getElementById('aziz');
        if (!aziz) {
            console.error('Element with ID "aziz" not found.');
            return;
        }

