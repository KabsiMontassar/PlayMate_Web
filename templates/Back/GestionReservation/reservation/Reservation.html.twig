        if (reservations.length === 0) {
            var noReservationMessage = document.createElement('div');
            noReservationMessage.textContent = 'Aucune réservation trouvée.';
            aziz.appendChild(noReservationMessage);
        } else {
            aziz.innerHTML = `
            <div class="row reservation-header">
                <div class="col">Idreservation</div>
                <div class="col">Isconfirm</div>
                <div class="col">Datereservation</div>
                <div class="col">Heurereservation</div>
