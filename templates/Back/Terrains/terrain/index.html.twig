{% extends 'BaseBack.html.twig' %}

{% block title %}Terrain index{% endblock %}

{% block body %}
<header id="header" class="header fixed-top d-flex align-items-center">

  <div class="d-flex align-items-center justify-content-between">
    <a href="#" class="logo d-flex align-items-center"> <!-- home -->
      <img src="{{ asset('Back/assets/img/PlayMate.png') }}" alt="">
      <span class="d-none d-lg-block">PlayMate</span>
    </a>
    <i class="bi bi-list toggle-sidebar-btn"></i>
  </div><!-- End Logo -->

</header>
<aside id="sidebar" class="sidebar">

  <ul class="sidebar-nav" id="sidebar-nav">



    <li class="nav-heading">Pages</li>

  
    <li class="nav-item">
      <a class="nav-link collapsed" href="{{ path('app_user_dashboard') }}"> 
        <i class="bi bi-grid"></i>
        <span>Dashboard</span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="{{ path('app_terrain_index') }}"> 
        <i class="bi bi-grid"></i>
        <span>Terrain</span>
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link collapsed" href="{{ path('app_avis_index') }}"> 
        <i class="bi bi-grid"></i>
        <span>Avis</span>
      </a>
    </li>

  </ul>

</aside>

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Table Page</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item">Pages</li>  
        <li class="breadcrumb-item active">Table</li>

      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section">
    <table class="table datatable">
 
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>Gradin</th>
                <th>Vestiaire</th>
                <th>Status</th>
                <th>Nomterrain</th>
                <th>Prix</th>
                <th>Duree</th>
                <th>Gouvernorat</th>
                <th>Image</th>
                <th>Video</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for terrain in terrains %}
            <tr>
                <td>{{ terrain.id }}</td>
                <td>{{ terrain.address }}</td>
                <td>{{ terrain.gradin ? 'disponible' : 'indisponible' }}</td>
                <td>{{ terrain.vestiaire ? 'disponible' : 'indisponible' }}</td>
                <td>{{ terrain.status ? 'disponible' : 'en travaux' }}</td>
                <td>{{ terrain.nomterrain }}</td>
                <td>{{ terrain.prix }}</td>
                <td>{{ terrain.duree }}</td>
                <td>{{ terrain.gouvernorat }}</td>
                <td>{{ terrain.image }}</td>
                <td>{{ terrain.video }}</td>
                <td>
                    <a href="{{ path('app_terrain_show', {'id': terrain.id}) }}">show</a>
                    <a href="{{ path('app_terrain_edit', {'id': terrain.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_terrain_new') }}">Create new</a>
  </section>
</main>
{% endblock %}