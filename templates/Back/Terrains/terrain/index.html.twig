                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for terrain in terrains %}
            <tr>
                <td>{{ terrain.id }}</td>
                <td>{{ terrain.address }}</td>
                <td>{{ terrain.gradin ? 'disponible' : 'indisponible' }}</td>
                <td>{{ terrain.vestiaire ? 'disponible' : 'indisponible' }}</td>
                <td>{{ terrain.status ? 'disponible' : 'en travaux' }}</td>
                <td>{{ terrain.nomterrain }}</td>
                <td>{{ terrain.prix }}</td>
                <td>{{ terrain.duree }}</td>
                <td>{{ terrain.gouvernorat }}</td>
                <td>{{ terrain.image }}</td>
                <td>{{ terrain.video }}</td>
                <td>
                     <form action="{{ path('app_terrain_delete', {'id': terrain.id}) }}" method="post" onsubmit="return confirm('Voulez-vous supprimer ce terrain?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ terrain.id) }}">
    <button type="submit" class="btn btn-danger">Supprimer</button>
</form>
                    <button onclick="window.location='{{ path('app_terrain_edit', {'id': terrain.id}) }}'" class="btn btn-primary">Modifier</button>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button onclick="window.location='{{ path('app_terrain_new') }}'" class="btn btn-success">Ajouter</button>
