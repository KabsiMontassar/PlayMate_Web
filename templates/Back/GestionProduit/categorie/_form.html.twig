    <nav>
      <ol class="breadcrumb">
    

      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

{{ form_start(form, {'attr': {'class': 'row g-3 needs-validation p-4', 'novalidate': 'novalidate'} }) }}

 <style>
    /* CSS styles here */
    .form-group {
      margin-bottom: 20px;
    }

    label {
      font-weight: bold;
    }

    input[type="text"],
    input[type="file"],
    select {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px; 
      box-sizing: border-box;
      margin-top: 4px;
      margin-bottom: 10px;
    }

    button.btn {
      background-color: #4CAF50;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
    }

    button.btn:hover {
      background-color: #45a049;
    }
  </style>
  {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
</section>
</main>
