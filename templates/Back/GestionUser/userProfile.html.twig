<script>
  function showContent(contentId) {
    // Hide all containers
    var containers = document.querySelectorAll('.container');
    containers.forEach(function(container) {
        container.style.display = 'none';
    });

    // Show the selected container
    var selectedContainer = document.getElementById(contentId);
    if (selectedContainer) {
        selectedContainer.style.display = 'block';
    }

    // Update active class in the navbar
    var navLinks = document.querySelectorAll('.navbox ul li a');
    navLinks.forEach(function(link) {
        link.classList.remove('active');
        if (link.getAttribute('href') === '#' + contentId) {
            link.classList.add('active');
        }
    });

    // Close the menu
    document.getElementById('menu-icon').checked = false;
}

</script>

