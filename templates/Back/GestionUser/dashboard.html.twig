<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // Retrieve user counts data from PHP (passed from controller)
    var userCounts = {{ user_counts|json_encode|raw }};

    // Get labels and data for the chart
    var labels = Object.keys(userCounts);
    var data = Object.values(userCounts);

    // Render the pie chart
    var ctx = document.getElementById('userPieChart').getContext('2d');
    var userPieChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: labels,
            datasets: [{
                data: data,
                backgroundColor: [
                    '#FC6736', // for membre
                    '#211951', // organiser
                    '#836FFF', // proprietaire
                    '#15F5BA' // fournisseur
                ]
            }]
        }
    });

    
    </script>

    <script> 
  function deltenotification(id){
    $.ajax({
        url: "{{ path('app_notification_delete', {'id': '__id__'})|replace({'__id__': 'ID'}) }}".replace('ID', id),
        type: 'POST',
        data: {
            id: id
        },
        success: function(response) {
          
            location.reload();

        }
    });
}
    </script>



