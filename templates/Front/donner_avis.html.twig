{% extends 'BaseFront.html.twig' %}

{% block title %}Donner un avis sur {{ terrain.getNomterrain() }}{% endblock %}

{% block body %}
<!-- Navbar Start -->
    <div class="container-fluid position-relative nav-bar p-0">
        <div class="container-lg position-relative p-0 px-lg-3" style="z-index: 9;">
            <nav class="navbar navbar-expand-xl bg-light navbar-light shadow-lg py-3 py-lg-0 pl-3 pl-lg-5">
                <a href="{{ path('app_Home') }}" class="navbar-brand">
                    <h1 class="m-0 text-primary"><span class="text-dark">Play</span>Mate</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between px-3" id="navbarCollapse">
                    <div class="navbar-nav ml-auto py-0">
                        <a href="{{ path('app_Home') }}" class="nav-item nav-link">Accueil</a>
                        <a href="{{ path('app_Apropos') }}" class="nav-item nav-link">À propos</a>
                        <a href="{{ path('app_Service') }}" class="nav-item nav-link">Services</a>
                        <a href="{{ path('app_Reservation') }}" class="nav-item nav-link">Réservée</a>
                        <a href="{{ path('app_Boutique') }}" class="nav-item nav-link">Boutique</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle active" data-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu border-0 rounded-0 m-0">
                                <a href="{{ path('app_Terrains' ,) }}" class="dropdown-item active">Nos Terrains</a>
                                <a href="{{ path('app_Evenement') }}" class="dropdown-item">Nos Événement</a>
                            </div>
                        </div>
                        <a href="{{ path('app_Contact') }}" class="nav-item nav-link">Contact</a>
                    </div>
                    <!-- Additional navbar items for small screens -->
                    <div class="navbar-nav ml-auto d-lg-none">
                        {% if app.user %}
                        <a href="{{ path('app_user_profile') }}" class="nav-item nav-link">Voir profile</a>
                        <a href="{{ path('app_logout') }}" class="nav-item nav-link">Se déconnecter</a>
                        {% else %}
                        <a href="{{ path('app_login') }}" class="nav-item nav-link">Se connecter</a>
                        <a href="{{ path('app_register') }}" class="nav-item nav-link">S'inscrire</a>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->
  <div class="container mt-5">
    <h1 class="text-center mb-4">Donner un avis sur {{ terrain.getNomterrain() }}</h1>
    
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="form-group commentaire">
                {{ form_row(form.commentaire, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group note">
                {{ form_row(form.note) }}
            </div>
            
            <div class="text-center mb-3">
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>
            {% for type, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ type }}">{{ message }}</div>
    {% endfor %}
{% endfor %}

            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
    /* Style pour le commentaire */
    .form-group.commentaire {
        margin-bottom: 20px;
    }
    
    .form-group.commentaire label {
        font-weight: bold;
        color: #333;
    }

    .form-group.commentaire textarea {
        width: 100%;
        height: 100px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        resize: vertical;
        font-size: 16px;
    }

    /* Style pour la note */
    .form-group.note {
        margin-bottom: 20px;
        margin-top: 50px; /* Ajout de marge en haut */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-group.note label {
        font-weight: bold;
        color: #333;
    }

    .form-group.note input[type="number"] {
        width: 80px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 16px;
    }

    .form-group.note input[type="number"]:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }

    .form-group.note .star-rating {
        display: inline-block;
        unicode-bidi: bidi-override;
        direction: rtl;
    }

    .form-group.note .star-rating input {
        display: none;
    }

    .form-group.note .star-rating label {
        font-size: 30px;
        color: #ccc;
        cursor: pointer;
    }

    .form-group.note .star-rating label:before {
        content: '★';
        padding-right: 5px;
    }

    .form-group.note .star-rating input:checked ~ label {
        color: #f8d204;
    }
</style>



{% endblock %}