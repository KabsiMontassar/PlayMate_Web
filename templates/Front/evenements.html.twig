{% extends 'BaseFront.html.twig' %}

{% block title %}Evenements{% endblock %}
{% block stylesheets %}
        <style>
      .blog-date {
    position: absolute;
    top: 10px; /* Adjust as needed */
    left: 10px; /* Adjust as needed */
    background-color: #7ab730; /* This is the green color you had originally */
    color: white;
    padding: 8px 12px; /* Adjust padding if necessary */
    font-size: 0.65rem; /* Smaller font size */
    border-radius: 5px; /* Rounded corners */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Optional: add a shadow for depth */
    max-width: 200px; /* Adjust as necessary */
    overflow: hidden;
    text-overflow: ellipsis;
}
        </style>
    {% endblock %}
{% block body %}

    <!-- Navbar Start -->
    <div class="container-fluid position-relative nav-bar p-0">
        <div class="container-lg position-relative p-0 px-lg-3" style="z-index: 9;">
            <nav class="navbar navbar-expand-xl bg-light navbar-light shadow-lg py-3 py-lg-0 pl-3 pl-lg-5">
                <a href="{{ path('app_Home' ) }}"  class="navbar-brand">
                    <h1 class="m-0 text-primary"><span class="text-dark">Play</span>Mate</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between px-3" id="navbarCollapse">
                    <div class="navbar-nav ml-auto py-0">
                        <a href="{{ path('app_Home' ) }}"  class="nav-item nav-link">Accueil</a>
                        <a href="{{ path('app_Apropos' ) }}"  class="nav-item nav-link">À propos</a>
                        <a href="{{ path('app_Service' ) }}"  class="nav-item nav-link">Services</a>
                        <a href="{{ path('app_Reservation' ) }}"  class="nav-item nav-link">Réservée</a>
                        <a href="{{ path('app_Boutique' ) }}"  class="nav-item nav-link">Boutique</a>
                        <div class="nav-item dropdown">
                            <a href="#"  class="nav-link dropdown-toggle active" data-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu border-0 rounded-0 m-0">
                                <a href="{{ path('app_Terrains' ) }}"  class="dropdown-item ">Nos Terrains</a>
                                <a href="{{ path('app_Evenement' ) }}"  class="dropdown-item active">Nos Événement</a>
                            </div>
                        </div>
                        <a href="{{ path('app_Contact' ) }}"  class="nav-item nav-link">Contact</a>
                    </div>
                     <div class="navbar-nav ml-auto d-lg-none">
                         {% if app.user %}
                        <a href="{{ path('app_user_profile') }}" class="nav-item nav-link">Voir profile</a>
                        <a href="{{ path('app_logout') }}" class="nav-item nav-link">Se déconnecter</a>
                        {% else %}
                        <a href="{{ path('app_login') }}" class="nav-item nav-link">Se connecter</a>
                        <a href="{{ path('app_register') }}" class="nav-item nav-link">S'inscrire</a>
                        {% endif %}
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->


    <!-- Header Start -->
    <div class="container-fluid page-header">
        <div class="container">
            <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
                <h3 class="display-4 text-white text-uppercase">Nos Événement</h3>
                <div class="d-inline-flex text-white">
                    <p class="m-0 text-uppercase"><a class="text-white" href="{{ path('app_Home' ) }}" >Accueil</a></p>
                    <i class="fa fa-angle-double-right pt-1 px-3"></i>
                    <p class="m-0 text-uppercase">Nos Événement</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Header End -->


    <!-- Blog Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-8">
                    <div class="row pb-3">
                   {% for tournoi in tournois %}

                        <div class="col-md-6 mb-4 pb-2">
                            <div class="blog-item">
                                <div class="position-relative">
                                    {% if tournoi.affiche %}
                                     <img class="img-fluid w-100" src="{{ asset('uploads/images/' ~ tournoi.affiche) }}" alt="">
                                    {% endif %}
                                   <div class="blog-date">
    <h8 class="font-weight-bold mb-n1">{{ tournoi.getDatedebut()|date('d F')|replace({'January': 'Janvier', 'February': 'Février', 'March': 'Mars', 'April': 'Avril', 'May': 'Mai', 'June': 'Juin', 'July': 'Juillet', 'August': 'Août', 'September': 'Septembre', 'October': 'Octobre', 'November': 'Novembre', 'December': 'Décembre'}) }}</h8>
    <small class="text-white text-uppercase">Date Début</small>
</div>

                                </div>
                                <div class="bg-white p-4">
                                    <div class="d-flex mb-2">
                                        <a class="text-primary text-uppercase text-decoration-none" href="#" >{{ tournoi.getAddress() }}</a>
                                        <span class="text-primary px-2">|</span>
                                        <a class="text-primary text-uppercase text-decoration-none" href="#" >{{ tournoi.getNom() }}</a>
                                    </div>
                                    <a href="{{ path('app_tournoi_detail', {'id': tournoi.id}) }}"  class="btn btn-primary btn-sm float-right">Voir les détails <i class="bi bi-eye"></i></a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                     
                        <div class="col-12">
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-lg justify-content-center bg-white mb-0" style="padding: 30px;">
                                  <li class="page-item disabled">
                                    <a class="page-link" href="#"  aria-label="Previous">
                                      <span aria-hidden="true">&laquo;</span>
                                      <span class="sr-only">Previous</span>
                                    </a>
                                  </li>
                                  <li class="page-item active"><a class="page-link" href="#" >1</a></li>
                                  <li class="page-item"><a class="page-link" href="#" >2</a></li>
                                  <li class="page-item"><a class="page-link" href="#" >3</a></li>
                                  <li class="page-item">
                                    <a class="page-link" href="#"  aria-label="Next">
                                      <span aria-hidden="true">&raquo;</span>
                                      <span class="sr-only">Next</span>
                                    </a>
                                  </li>
                                </ul>
                              </nav>
                        </div>
                    </div>
                </div>
    
                <div class="col-lg-4 mt-5 mt-lg-0">
                    
    
                    <!-- Search Form -->
                    <div class="mb-5">
                        <div class="bg-white" style="padding: 30px;">
                            <div class="input-group">
                                <input type="text" class="form-control p-4" placeholder="Keyword">
                                <div class="input-group-append">
                                    <span class="input-group-text bg-primary border-primary text-white"><i
                                            class="fa fa-search"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>

                   
    
                    <!-- Recent Events -->
                    <div class="mb-5">
                
                     <div class="mb-5">
                    <h4 class="text-uppercase mb-4" style="letter-spacing: 5px;">Évènements récents</h4>
    <div class="list-group">
        {% for tournoi in tournoirecent %}
            <a href="{{ path('app_tournoi_detail', {'id': tournoi.id}) }}" class="list-group-item list-group-item-action flex-column align-items-start mb-3">
                <div class="d-flex w-100 justify-content-start">
                    <img src="{{ asset('uploads/images/' ~ tournoi.affiche) }}" alt="{{ tournoi.getNom() }}" class="img-fluid mr-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <div class="event-details">
                        <h5 class="mb-1">{{ tournoi.getNom() }}</h5>
                        <p class="mb-1">{{ tournoi.getAddress() }}</p>
                        <small>Date de début: {{ tournoi.getDatedebut()|date('Y-m-d') }}</small>
                    </div>
                </div>
            </a>
        {% endfor %}
                
                    </div>
                 
                </div>
            </div>
        </div>
        
    </div>
    <!-- Events End -->


   
   {% endblock %}