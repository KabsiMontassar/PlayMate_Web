    <script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialisation de FullCalendar
    var calendarEl = document.getElementById('calendar');
    var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        events: [
            // Bouclez sur vos événements pour les ajouter ici
            {% for tournoi in tournois %}
            {
                id: '{{ tournoi.getId() }}',
                title: '{{ tournoi.getNom() }}',
                start: '{{ tournoi.getDatedebut()|date('Y-m-d') }}',
                url: '{{ path('app_tournoi_detail', {'id': tournoi.getId()}) }}'
            },
            {% endfor %}
        ],
        eventClick: function(info) {
            info.jsEvent.preventDefault(); // Empêche l'action par défaut
            if (info.event.url) {
                window.location.href = info.event.url; // Redirige vers l'URL de l'événement
            }
        }
    });
    calendar.render();

    // Gestionnaire d'événements pour ouvrir le modal de Bootstrap
    document.getElementById('open-calendar').addEventListener('click', function() {
        $('#calendarModal').modal('show'); // Montre le modal avec l'ID 'calendarModal'
    });

    // La logique pour fermer le modal et le fond sombre n'est pas nécessaire si vous utilisez le modal de Bootstrap.
});
</script>


