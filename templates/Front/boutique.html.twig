<style>
    /* Additional CSS for Styling Products */
    .product-category-title {
        background-color: #f8f9fa;
        /* Light gray background */
        padding: 10px 15px;
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, .05);
        transition: background-color 0.3s ease;
    }

    .product-category-title:hover {
        background-color: #e2e6ea;
        /* Slightly darker on hover */
    }

    .product-item {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, .1);
    }

    .product-img {
        height: 300px;
        /* Fixed image height for uniformity */
        object-fit: cover;
        /* Ensure full cover of the image area */
    }

    .product-name {
        font-size: 1.25rem;
        /* Larger font size for product name */
        color: #333;
        /* Dark color for text */
        font-weight: bold;
        margin-top: 10px;
    }

    .product-description {
        color: #666;
        /* Lighter color for description */
        font-size: 0.95rem;
        height: 60px;
        /* Fixed height for uniformity */
        overflow: hidden;
        /* Hide overflow */
    }

    .product-price {
        font-size: 1.1rem;
        /* Larger font size for price */
        color: #28a745;
        /* Green color for price */
        font-weight: bold;
    }

    .icon-coins {
        color: #ffc107;
        /* Gold color for the coins icon */
    }
</style>
{% endblock %}
