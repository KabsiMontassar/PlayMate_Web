</div>
<!-- Navbar End -->

</style>

<!-- Header Start -->
<style>
    #im1 {
        object-fit: cover;
        object-position: center;
        height: 400px;
        width: 100%;
        opacity: 0.7;
        /* Rendre l'image légèrement transparente */
    }

    .text-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
    }
</style>

<div class="container-fluid ">
    <div class="container">
        <img class="img-fluid" id="im1" src="Front\css\ReservationCss\m.jpg" alt="">
        <div class="text-overlay">
            <h3 class="display-4 text-uppercase">Reservation</h3>
            <div class="d-inline-flex">
                <p class="m-0 text-uppercase"><a class="text-white"
                        href="{{ path('app_Home' ) }}">Home</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">Reserver</p>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->
<div class="container pt-5 pb-3">
    <div class="text-center mb-3 pb-3">
        <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">N'attendez pas !</h6>
        <h1 style="padding-bottom: 40px;">Créez votre légende !</h1>
    </div>
    <!--book start-->
    <div class="container-fluid booking mt-5 pb-5 d-flex justify-content-center align-items-center invisible"
        id="bookingDiv">
        <div class="container pb-5">
            <div class="bg-light shadow" style="padding: 30px;">
                <div class="row align-items-center text-center" style="min-height: 60px;">
                    <div class="col-md-3">
                        <div class="mb-3 mb-md-0">
                            <select class="custom-select px-4" style="height: 47px;">
                                <option selected>Equipe</option>
                                <option value="1">equipe 1</option>
                                <option value="2">equipe 2</option>
                                <option value="3">equipe 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3 mb-md-0">
                            <div class="date" id="date1" data-target-input="nearest">
                                <input type="text" class="form-control p-4 datetimepicker-input"
                                    placeholder="Choisir une date" data-target="#date1" data-toggle="datetimepicker" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="mb-3 mb-md-0">
                            <input type="time" class="form-control p-4" placeholder="Horaire">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary btn-block" type="submit"
                            style="height: 47px; margin-top: -2px;">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--book end-->

    <!-- Destination Start -->
    <div class="container-fluid py-5">

        <div class="row destination-row" id="CreerPartie">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="destination-item position-relative overflow-hidden mb-2" onclick="toggleRow()">
                    <img class="img-fluid" src="Front\css\ReservationCss\lancezvous.avif" alt="">
                    <a class="destination-overlay text-white text-decoration-none">
                        <h5 class="text-white">Créer votre partie !</h5>
                        <span></span>
                    </a>

                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="destination-item position-relative overflow-hidden mb-2" onclick="toggleRow()">
                    <img class="img-fluid" src="Front\css\ReservationCss\enqueteadv.webp" alt="">
                    <a class="destination-overlay text-white text-decoration-none">
                        <h5 class="text-white">En quête d'adversaire</h5>
                        <span></span>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="destination-item position-relative overflow-hidden mb-2" onclick="toggleRow()">
                    <img class="img-fluid" src="Front\css\ReservationCss\m.jpg" alt="">
                    <a class="destination-overlay text-white text-decoration-none">
                        <h5 class="text-white">Lancez-Vous</h5>
                        <span></span>
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- Destination Start -->
<script>
    function toggleRow() {
        var row = document.querySelector(".destination-row");
        row.classList.toggle("hidden");

        var bookingDiv = document.getElementById("bookingDiv");
        bookingDiv.classList.toggle("invisible");
    }
</script>

<style>
    .backg {
        background-image: url('C:\Users\azizb\Bureau\3eme\SymfonyProject\SpartansPIWeb\public\Front\css\ReservationCss\enqueteadv.webp');
        background-size: cover;
        background-position: center;
        height: 400px;
        /* ajustez la hauteur en fonction de vos besoins */
    }
</style>

{% endblock %}