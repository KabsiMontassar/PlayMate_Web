{% extends 'BaseFront.html.twig' %}

{% block title %}A propos{% endblock %}
{% block body %}
<!-- Navbar Start -->
<div class="container-fluid position-relative nav-bar p-0">
    <div class="container-lg position-relative p-0 px-lg-3" style="z-index: 9;">
        <nav class="navbar navbar-expand-xl bg-light navbar-light shadow-lg py-3 py-lg-0 pl-3 pl-lg-5">
            <a href="{{ path('app_Home' ) }}" class="navbar-brand">
                <h1 class="m-0 text-primary"><span class="text-dark">Play</span>Mate</h1>
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between px-3" id="navbarCollapse">
                <div class="navbar-nav ml-auto py-0">
                    <a href="{{ path('app_Home' ) }}" class="nav-item nav-link">Accueil</a>
                    <a href="{{ path('app_Apropos' ) }}" class="nav-item nav-link active">À propos</a>
                    <a href="{{ path('app_Service' ) }}" class="nav-item nav-link ">Services</a>
                    <a href="{{ path('app_Reservation' ) }}" class="nav-item nav-link ">Réservée</a>
                    <a href="{{ path('app_Boutique' ) }}" class="nav-item nav-link ">Boutique</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle " data-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu border-0 rounded-0 m-0">
                            <a href="{{ path('app_Terrains' ) }}" class="dropdown-item">Nos Terrains</a>
                            <a href="{{ path('app_Evenement' ) }}" class="dropdown-item">Nos Événement</a>
                            a href="{{ path('app_Historique' ) }}" class="dropdown-item">Votre Historique</a>
                            <a href="{{ path('app_reservation_future' ) }}" class="dropdown-item">Vos
                                Reservations</a>
                        </div>
                    </div>
                    <a href="{{ path('app_Contact' ) }}" class="nav-item nav-link">Contact</a>
                </div>
                <div class="navbar-nav ml-auto d-lg-none">
                    {% if app.user %}
                    <a href="{{ path('app_user_profile') }}" class="nav-item nav-link">Voir profile</a>
                    <a href="{{ path('app_logout') }}" class="nav-item nav-link">Se déconnecter</a>
                    {% else %}
                    <a href="{{ path('app_login') }}" class="nav-item nav-link">Se connecter</a>
                    <a href="{{ path('app_register') }}" class="nav-item nav-link">S'inscrire</a>
                    {% endif %}
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Navbar End -->


<!-- Header Start -->
<div class="container-fluid page-header">
    <div class="container">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 400px">
            <h3 class="display-4 text-white text-uppercase">À propos</h3>
            <div class="d-inline-flex text-white">
                <p class="m-0 text-uppercase"><a class="text-white" href="{{ path('app_Home' ) }}">Accueil</a></p>
                <i class="fa fa-angle-double-right pt-1 px-3"></i>
                <p class="m-0 text-uppercase">À propos</p>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->






<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container pt-5">
        <div class="row">
            <div class="col-lg-6" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img class="position-absolute w-100 h-100" src="{{ asset('Front/img/img4.jpg ') }}"
                        style="object-fit: cover;">
                </div>
            </div>
            <div class="col-lg-6 pt-5 pb-lg-5">
                <div class="about-text bg-white p-4 p-lg-5 my-lg-5">
                    <h6 class="text-primary text-uppercase" style="letter-spacing: 5px;">À propos</h6>
                    <h1 class="mb-3">Trouvez le terrain idéal pour vous</h1>
                    <p>Notre site est votre meilleur allié pour trouver le terrain sportif parfaitement adapté à vos
                        besoins</p>
                    <div class="row mb-4">
                        <div class="col-6">
                            <img class="img-fluid" src="{{ asset('Front/img/terrain3.jpg ') }}" alt="">
                        </div>
                        <div class="col-6">
                            <img class="img-fluid" src="{{ asset('Front/img/terrain4.jpg ') }}" alt="">
                        </div>
                    </div>
                    <a href="{{ path('app_Reservation' ) }}" class="btn btn-primary mt-1">Réservée Maintenant</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->


<!-- Feature Start -->
<div class="container-fluid pb-5">
    <div class="container pb-5">
        <div class="row">
            <div class="col-md-4">
                <div class="d-flex mb-4 mb-lg-0">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-primary mr-3"
                        style="height: 100px; width: 100px;">
                        <i class="fa fa-2x fa-money-check-alt text-white"></i>
                    </div>
                    <div class="d-flex flex-column">
                        <h5 class="">Tarifs Compétitifs</h5>
                        <p class="m-0">Trouvez des terrains à des prix compétitifs qui s'adaptent à votre budget</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex mb-4 mb-lg-0">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-primary mr-3"
                        style="height: 100px; width: 100px;">
                        <i class="fa fa-2x fa-award text-white"></i>
                    </div>
                    <div class="d-flex flex-column">
                        <h5 class="">Services de Qualité</h5>
                        <p class="m-0">Profitez de services de qualité pour réserver les terrains en toute simplicité
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex mb-4 mb-lg-0">
                    <div class="d-flex flex-shrink-0 align-items-center justify-content-center bg-primary mr-3"
                        style="height: 100px; width: 100px;">
                        <i class="fa fa-2x fa-map-marker text-white"></i>

                    </div>
                    <div class="d-flex flex-column">
                        <h5 class="">Couverture étendue</h5>
                        <p class="m-0">Des terrains disponibles dans de nombreuses régions pour répondre à vos besoins
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feature End -->

{% endblock %}